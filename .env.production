# Production Environment Variables for EAUT Assessment Platform
# Copy these to your deployment platform (Railway, Render, Vercel)

# Application Settings
NODE_ENV=production
PORT=3000

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=eaut_assessment
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# Alternative: Database URL (used by Railway/Render)
# DATABASE_URL=postgresql://username:password@host:port/database

# Security Settings
JWT_SECRET=your_super_secure_jwt_secret_key_here
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here

# File Upload Settings
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,application/pdf,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@example.com
EMAIL_PASS=your-app-password

# Application URLs
FRONTEND_URL=https://your-domain.com
API_BASE_URL=https://your-api-domain.com

# Security Headers
CORS_ORIGIN=https://your-domain.com
ALLOWED_HOSTS=your-domain.com,api.your-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Performance
ENABLE_COMPRESSION=true
ENABLE_HELMET=true

# Features Flags
ENABLE_FILE_UPLOAD=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_ANALYTICS=true
